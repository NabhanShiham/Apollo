
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (User.Identity?.IsAuthenticated == true)
    {
        <h1 class="display-4">Dashboard</h1>
        <p class="font-mono">Available Books: @ViewBag.countOfAvailableBooks || Count of Books Loaned: @ViewBag.countOfLoanedBooks || Friend Notifications: </p>
    }

    @if (User.Identity?.IsAuthenticated != true)
    {
        <h1 class="display-4">Welcome to Apollo! </h1>
        <p class="font-mono">Manage ur Library here brev.</p>
    }
    
</div>
